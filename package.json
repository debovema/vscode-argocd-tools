{
	"name": "vscode-argocd-tools",
	"displayName": "Argocd Tools",
	"description": "Manage Argocd using VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"license": "MIT",
	"categories": [
		"Other"
	],
	"keywords": [
		"kubernetes",
		"argocd",
		"gitops"
	],
	"activationEvents": [
		"onView:argocd"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "argocdView",
					"title": "Argocd Explorer",
					"icon": "resources/dark/dependency.svg"
				}
			]
		},
		"views":{
			"argocdView":[
				{
					"id": "argocdContexts",
					"name": "Argocd Contexts",
					"icon": "resources/dark/dependency.svg"
				},
				{
					"id": "argocdClusters",
					"name": "Kubernetes Clusters",
					"icon": "resources/dark/dependency.svg"
				},
				{
					"id": "argcdRepos",
					"name": "Repositories",
					"icon": "resources/dark/dependency.svg"
				},
				{
					"id": "argocdApplications",
					"name": "Argocd Applications",
					"icon": "resources/dark/dependency.svg"
				},
				{
					"id": "argocdProjects",
					"name": "Argocd Projects",
					"icon": "resources/dark/dependency.svg"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
